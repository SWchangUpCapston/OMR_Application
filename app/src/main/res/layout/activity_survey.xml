<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <LinearLayout
        android:id="@+id/questionContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="1 / 20"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/q1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/likertScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp">

            <Button
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:text="전혀 아니다"
                android:textSize="18sp"
                android:background="@drawable/gradient_button_1" />

            <Button
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:text="아니다"
                android:textSize="18sp"
                android:background="@drawable/gradient_button_2" />

            <Button
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:text="보통이다"
                android:textSize="18sp"
                android:background="@drawable/gradient_button_3" />

            <Button
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:text="그렇다"
                android:textSize="18sp"
                android:background="@drawable/gradient_button_4" />

            <Button
                android:id="@+id/option5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="4dp"
                android:text="매우 그렇다"
                android:textSize="18sp"
                android:background="@drawable/gradient_button_5" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>